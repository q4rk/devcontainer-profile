{
  "id": "devcontainer-profile",
  "version": "1.0.0",
  "name": "Dev Container Personal Profile",
  "description": "Late-binds personal settings, dotfiles, and tools from a config file.",
  "installsAfter": [
    "ghcr.io/devcontainers/features/common-utils",
    "ghcr.io/devcontainers/features/nix",
    "ghcr.io/devcontainers/features/python",
    "ghcr.io/devcontainers/features/node"
  ],
  "mounts": [
    {
      "source": "${devcontainerId}-profile-state",
      "target": "/var/lib/devcontainer-profile",
      "type": "volume"
    }
  ],
  "onCreateCommand": "/usr/local/share/devcontainer-profile/scripts/apply.sh"
}